# Copy this file to .env and configure with your values

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production

# Database Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=area
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Message Queue
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Google OAuth2
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8080/api/auth/oauth/google/callback

# GitHub OAuth2 (future)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:8080/api/auth/oauth/github/callback

# Facebook OAuth2 (future)
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URI=http://localhost:8080/api/auth/oauth/facebook/callback

# CORS Settings
CORS_ALLOWED_HOSTS=http://localhost:3000,http://localhost:5173,http://localhost:8081

# Server Port
PORT=8080

